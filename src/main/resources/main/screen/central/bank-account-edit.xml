<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://bankAccountEdit.caption"
        focusComponent="form">
    <data>
        <instance id="bankAccountDc"
                  class="main.entity.central.BankAccount">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="bankAccountDc">
            <column width="350px">
                <textField id="fullBankAccountCodeField" property="fullBankAccountCode"/>
                <textField id="financialInstitucionPartField" property="financialInstitucionPart"/>
                <textField id="officePartField" property="officePart"/>
                <textField id="controlDigitsField" property="controlDigits"/>
                <textField id="accountNumberField" property="accountNumber"/>
                <textField id="financialInstitutionNameField" property="financialInstitutionName"/>
                <textField id="swiftBankCodeField" property="swiftBankCode"/>
                <textField id="swiftCountryCodeField" property="swiftCountryCode"/>
                <textField id="swiftControlDigitsField" property="swiftControlDigits"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
